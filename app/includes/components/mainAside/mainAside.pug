mixin mainAside(className, list, [...arr])
    .main-aside(class=className)
        if(className==="jsHeaderCatalog")
            .main-aside__mobile 
                a(href="#").header__logo 
                    img(src="img/svg/logo.svg", alt="") 
                button.main-aside__close.jsCloseCatalog 
                    <svg width="60" height="60" viewBox="0 0 60 60" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <rect width="60" height="60" fill="#1974BF"/>
                        <line y1="-1" x2="20" y2="-1" transform="matrix(0.710634 0.703562 -0.710634 0.703562 22 23.0703)" stroke="white" stroke-width="2"/>
                        <line y1="-1" x2="20" y2="-1" transform="matrix(0.710634 -0.703562 0.710634 0.703562 23 37.0703)" stroke="white" stroke-width="2"/>
                    </svg>
        .main-aside__inner
            each mainAside in arr
                if(!mainAside.mobile)
                    .main-aside__item 
                        .main-aside__group 
                            .main-aside__group-inner
                                .main-aside__icon 
                                    img(src=mainAside.img, alt="")
                                a(href="#")=mainAside.text
                            <svg width="10" height="15" viewBox="0 0 10 15" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <line x1="1.46967" y1="14.4694" x2="8.74927" y2="7.18983" stroke="black" stroke-width="1.5"/>
                                <line y1="-0.75" x2="10.2949" y2="-0.75" transform="matrix(0.707107 0.707107 0.707107 -0.707107 2 0.000488281)" stroke="black" stroke-width="1.5"/>
                            </svg>
                        ul.main-aside__submenu 
                            each listItem in mainAside.list
                                li
                                    a(href="#")=listItem 
                else 
                    .main-aside__item.jsTogglerParent 
                        .main-aside__group 
                            .main-aside__group-inner
                                .main-aside__icon 
                                    img(src=mainAside.img, alt="")
                                a(href="#")=mainAside.text 
                            button.main-aside__button.jsTogglerHead
                                <svg width="10" height="15" viewBox="0 0 10 15" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <line x1="1.46967" y1="14.4694" x2="8.74927" y2="7.18983" stroke="black" stroke-width="1.5"/>
                                    <line y1="-0.75" x2="10.2949" y2="-0.75" transform="matrix(0.707107 0.707107 0.707107 -0.707107 2 0.000488281)" stroke="black" stroke-width="1.5"/>
                                </svg>
                        ul.main-aside__submenu.jsTogglerBody 
                            each listItem in mainAside.list
                                li
                                    a(href="#")=listItem
                        
                            



                
             

            